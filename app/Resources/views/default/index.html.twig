{% extends '::base.html.twig' %}

{% block body %}
    <h1>Articles</h1>
    <div><a href="{{ path('create_article') }}">Create an article</a></div>
    {% for article in articles %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{ article.title }} - {{ article.createdDate|date('m/d/Y') }}</h3>
            </div>
            <div class="panel-body">
                {{ article.content }}
            </div>
        </div>
    {% endfor %}
{% endblock %}